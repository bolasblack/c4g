{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsSchematicSchema",
  "title": "Schematic Options Schema",
  "definitions": {
    "includeItem": {
      "$id": "#includeItem",
      "type": "string",
      "enum": ["lint-staged", "commitlint", "githooks", "renovate"]
    },
    "include": {
      "$id": "#include",
      "type": "array",
      "items": {
        "$ref": "#includeItem"
      },
      "description": "The project tools want add"
    },
    "cwd": {
      "$id": "#cwd",
      "type": "string",
      "default": ".",
      "description": "Specify the schematic execute cwd relative to current cwd"
    },
    "interactive": {
      "$id": "#interactive",
      "type": "boolean"
    }
  },
  "type": "object",
  "properties": {
    "include": {
      "$ref": "#include"
    },
    "cwd": {
      "$ref": "#cwd"
    },
    "interactive": {
      "$ref": "#interactive",
      "default": true
    }
  },
  "required": []
}
