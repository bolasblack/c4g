{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsSchematicSchema",
  "title": "Schematic Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The package name for the new project."
    },
    "author": {
      "type": "string",
      "description": "Author for the new project."
    },
    "jest": {
      "type": "boolean",
      "description": "Add jest configs to the new project.",
      "default": false
    }
  },
  "required": ["name"]
}
